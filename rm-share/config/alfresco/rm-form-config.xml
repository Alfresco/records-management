<alfresco-config>
   
   <config>
      <forms>
         <dependencies>
            <js src="/rm/js/validation-min.js" />
         </dependencies>
      </forms>   
   </config>

   <!-- Records Management Creation Forms -->
   <config evaluator="model-type" condition="rma:recordCategory">
      <forms>
         <form>
            <field-visibility>
               <hide id="sys:node-uuid" />
               <hide id="sys:store-protocol" />
               <hide id="sys:store-identifier" />
               <hide id="sys:node-dbid" />
               <hide id="sys:locale" />
               <hide id="cm:created" />
               <hide id="cm:creator" />
               <hide id="cm:modified" />
               <hide id="cm:modifier" />
               <hide id="cm:accessed" />
               <hide id="cm:contains" />
               <hide id="rma:identifier" />
               <hide id="rma:dbUniquenessId" />
               <hide id="rma:dispositionSchedule" />
               <hide id="rma:rootNodeRef" />       
            </field-visibility>
            <create-form template="/org/alfresco/rm/components/form/create-container.ftl" />
            <appearance>
               <set id="name" />
               <set id="title" />
               <set id="description" />
               <set id="other" />
               <set id="rm-custom" />
               <field id="cm:description" mandatory="true" />
               <field id="rma:vitalRecordIndicator">
                  <control template="/org/alfresco/rm/components/form/controls/vital-record-indicator.ftl" />
               </field> 
               <field id="rma:reviewPeriod">
                  <constraint-handlers>
                     <constraint type="MANDATORY" validation-handler="Alfresco.forms.validation.rmVitalRecordPeriodMandatory" />
                  </constraint-handlers>
               </field>
            </appearance>
         </form>
      </forms>
   </config>
   
   <!--  Included for backwards compatibility with RM 1.0 -->
   <config evaluator="model-type" condition="dod:recordSeries">
      <forms>
         <form>
            <field-visibility>
               <hide id="sys:node-uuid" />
               <hide id="sys:store-protocol" />
               <hide id="sys:store-identifier" />
               <hide id="sys:node-dbid" />
               <hide id="sys:locale" />
               <hide id="cm:created" />
               <hide id="cm:creator" />
               <hide id="cm:modified" />
               <hide id="cm:modifier" />
               <hide id="cm:accessed" />
               <hide id="cm:contains" />
               <hide id="rma:identifier" />
               <hide id="rma:dbUniquenessId" />
               <hide id="rma:dispositionSchedule" />
               <hide id="rma:rootNodeRef" />       
            </field-visibility>
            <create-form template="/org/alfresco/rm/components/form/create-container.ftl" />
            <appearance>
               <set id="name" />
               <set id="title" />
               <set id="description" />
               <set id="other" />
               <set id="rm-custom" />
               <field id="cm:description" mandatory="true" />
               <field id="rma:vitalRecordIndicator">
                  <control template="/org/alfresco/rm/components/form/controls/vital-record-indicator.ftl" />
               </field> 
               <field id="rma:reviewPeriod">
                  <constraint-handlers>
                     <constraint type="MANDATORY" validation-handler="Alfresco.forms.validation.rmVitalRecordPeriodMandatory" />
                  </constraint-handlers>
               </field>
            </appearance>
         </form>
      </forms>
   </config>
   
   <config evaluator="model-type" condition="rma:recordFolder">
      <forms>
         <form>
            <field-visibility>
               <hide id="sys:node-uuid" />
               <hide id="sys:store-protocol" />
               <hide id="sys:store-identifier" />
               <hide id="sys:node-dbid" />
               <hide id="sys:locale" />
               <hide id="cm:created" />
               <hide id="cm:creator" />
               <hide id="cm:modified" />
               <hide id="cm:modifier" />
               <hide id="cm:accessed" />
               <hide id="cm:contains" />
               <hide id="rma:identifier" />
               <hide id="rma:dbUniquenessId" />
               <hide id="rma:isClosed" />
               <hide id="rma:rootNodeRef" />
            </field-visibility>
            <create-form template="/org/alfresco/rm/components/form/create-container.ftl" />
            <appearance>
               <set id="name" />
               <set id="title" />
               <set id="description" />
               <set id="other" />
               <set id="rm-custom" />
            </appearance>
         </form>
      </forms>
   </config>

   <config evaluator="model-type" condition="rma:nonElectronicDocument">
      <forms>
         <form>
            <field-visibility>
               <show id="cm:name" />
               <show id="cm:title" force="true" />
               <show id="cm:description" force="true" />
            </field-visibility>
            <create-form template="/org/alfresco/rm/components/form/create-container.ftl" />
            <appearance>
               <set id="rm-custom" />
               <field id="cm:title" mandatory="true">
                  <control template="/org/alfresco/components/form/controls/textfield.ftl" />
               </field>
            </appearance>
         </form>
      </forms>
   </config>

   <!-- Records Management Viewing and Editing Forms -->
   <config evaluator="node-type" condition="rma:dispositionSchedule">
      <forms>
         <form id="rm">
            <field-visibility>
               <show id="rma:dispositionAuthority" />
               <show id="rma:dispositionInstructions" />
               <show id="rma:recordLevelDisposition" />
            </field-visibility>
            <appearance>
               <field id="rma:recordLevelDisposition" label-id="label.recordLevelDisposition">
                  <control template="controls/selectone.ftl">
                     <control-param name="options">true|{label.record},false|{label.folder}</control-param>
                  </control>
               </field>
            </appearance>
         </form>
      </forms>
   </config>

   <config evaluator="node-type" condition="rma:recordCategory">
      <forms>
         <form id="rm">
            <field-visibility>
               <hide id="sys:node-uuid" />
               <hide id="sys:store-protocol" />
               <hide id="sys:store-identifier" />
               <hide id="sys:node-dbid" />
               <hide id="sys:locale" />
               <hide id="cm:created" />
               <hide id="cm:creator" />
               <hide id="cm:modified" />
               <hide id="cm:modifier" />
               <hide id="cm:owner" />
               <hide id="cm:original" />
               <hide id="cm:accessed" />
               <hide id="cm:contains" />
               <hide id="rma:dispositionSchedule" />
               <hide id="rma:dbUniquenessId" />
               <hide id="rma:rootNodeRef" />
            </field-visibility>
            <appearance>
               <set id="rm" />
               <set id="rm-custom" />
               <field id="cm:description" mandatory="true">
                  <control>
                     <control-param name="activateLinks">true</control-param>
                  </control>
               </field>
               <field id="rma:vitalRecordIndicator" set="rm">
                  <control template="/org/alfresco/rm/components/form/controls/vital-record-indicator.ftl" />
               </field>
               <field id="rma:reviewPeriod" set="rm">
                  <constraint-handlers>
                     <constraint type="MANDATORY" validation-handler="Alfresco.forms.validation.rmVitalRecordPeriodMandatory" />
                  </constraint-handlers>
               </field>
               <field id="rma:identifier" set="rm" label-id="label.categoryIdentifier" read-only="true" />
            </appearance>
         </form>
      </forms>
   </config>
   
   <config evaluator="node-type" condition="rma:recordFolder">
      <forms>
         <form id="rm">
            <field-visibility>
               <hide id="sys:node-uuid" />
               <hide id="sys:store-protocol" />
               <hide id="sys:store-identifier" />
               <hide id="sys:node-dbid" />
               <hide id="sys:locale" />
               <hide id="cm:created" />
               <hide id="cm:creator" />
               <hide id="cm:modified" />
               <hide id="cm:modifier" />
               <hide id="cm:owner" />
               <hide id="cm:accessed" />
               <hide id="cm:contains" />
               <hide id="cm:original" />
               <hide id="rma:isClosed" />
               <hide id="rma:dbUniquenessId" />
               <hide id="rma:nextDispositionAction" />
               <hide id="rma:dispositionActionHistory" />
               <hide id="rma:recordSearchDispositionActionName" />
               <hide id="rma:recordSearchDispositionEventsEligible" />
               <hide id="rma:recordSearchDispositionEvents" />
               <hide id="rma:recordSearchHasDispositionSchedule" />
               <hide id="rma:recordSearchDispositionPeriod" />
               <hide id="rma:recordSearchDispositionPeriodExpression" />
               <hide id="rma:recordSearchDispositionAuthority" />
               <hide id="rma:recordSearchDispositionInstructions" />
               <hide id="rma:recordSearchHoldReason" />
               <hide id="rma:recordSearchVitalRecordReviewPeriod" />
               <hide id="rma:recordSearchVitalRecordReviewPeriodExpression" />
               <hide id="rma:recordSearchDispositionActionAsOf" for-mode="edit" />
               <hide id="rma:cutOffDate" for-mode="edit" />
               <hide id="rma:frozenBy" />
               <hide id="rma:frozenAt" />
               <hide id="rma:rootNodeRef" />
            </field-visibility>
            <appearance>
               <set id="rm" />
               <set id="rm-custom" />
               <field id="cm:description">
                  <control>
                     <control-param name="activateLinks">true</control-param>
                  </control>
               </field>
               <field id="rma:identifier" set="rm" label-id="label.folderIdentifier" read-only="true" />
               <field id="rmc:supplementalMarkingList" set="rm" />
               <field id="rma:vitalRecordIndicator" set="rm">
                  <control template="/org/alfresco/rm/components/form/controls/vital-record-indicator.ftl" />
               </field> 
               <field id="rma:reviewPeriod" set="rm">
                  <constraint-handlers>
                     <constraint type="MANDATORY" validation-handler="Alfresco.forms.validation.rmVitalRecordPeriodMandatory" />
                  </constraint-handlers>
               </field>
               <field id="rma:location" set="rm" />
               <field id="rma:cutOffDate" set="rm" />
               <field id="rma:recordSearchDispositionActionAsOf" set="rm" label-id="label.dispositionAsOfDate" />
            </appearance>
         </form>
      </forms>
   </config>
   
   <config evaluator="node-type" condition="cm:content">
      <forms>
         <form id="rm">
            <view-form template="/org/alfresco/rm/components/form/record-metadata.ftl" />
            <edit-form template="/org/alfresco/rm/components/form/record-metadata.ftl" />
            
            <field-visibility>
               <!-- explicitly hide mandatory fields we don't want in edit mode -->
               <hide id="cm:automaticUpdate" />
               <hide id="sys:node-dbid" />
               <hide id="size" for-mode="edit" />
               <hide id="rma:dateFiled" for-mode="edit" />
               <hide id="rma:cutOffDate" for-mode="edit" />
               <hide id="rma:frozenBy" />
               <hide id="rma:frozenAt" />
               <hide id="rma:rootNodeRef" />
            </field-visibility>
            
            <appearance>
               <set id="rm-custom" label-id="label.set.customMetadata" appearance="panel" />
               
               <field id="rma:identifier" label-id="label.recordIdentifier" read-only="true" />
               <field id="rmCategoryIdentifier" label-id="label.categoryIdentifier" />
               <field id="rmDeclared" label-id="label.declared" />
               <field id="rmRecordType" label-id="label.recordType" />
               <field id="rmDispositionInstructions" label-id="label.dispositionInstructions" />
               <field id="rma:recordSearchDispositionActionAsOf" label-id="label.dispositionAsOfDate" />
               <field id="cm:title" mandatory="true">
                  <control template="/org/alfresco/components/form/controls/textfield.ftl" />
               </field>
               <field id="cm:description">
                  <control>
                     <control-param name="activateLinks">true</control-param>
                  </control>
               </field>
               <field id="mimetype">
                  <control template="/org/alfresco/components/form/controls/mimetype.ftl" />
               </field>
               <field id="size">
                  <control template="/org/alfresco/components/form/controls/size.ftl" />
               </field>
               <field id="dod:webSiteURL">
                  <control>
                     <control-param name="activateLinks">true</control-param>
                  </control>
               </field>
            </appearance>
         </form>
      </forms>
   </config>

   <config evaluator="node-type" condition="rma:nonElectronicDocument">
      <forms>
         <form id="rm">
            <view-form template="/org/alfresco/rm/components/form/record-metadata.ftl" />
            <edit-form template="/org/alfresco/rm/components/form/record-metadata.ftl" />
            
            <field-visibility>
               <!-- explicitly hide mandatory fields we don't want in edit mode -->
               <hide id="cm:automaticUpdate" />
               <hide id="sys:node-dbid" />
               <hide id="size" for-mode="edit" />
               <hide id="rma:dateFiled" for-mode="edit" />
               <hide id="rma:cutOffDate" for-mode="edit" />
               <hide id="rma:frozenBy" />
               <hide id="rma:frozenAt" />
               <hide id="rma:rootNodeRef" />
            </field-visibility>
            
            <appearance>
               <set id="rm-custom" label-id="label.set.customMetadata" appearance="panel" />
               
               <field id="rma:identifier" label-id="label.recordIdentifier" read-only="true" />
               <field id="rmCategoryIdentifier" label-id="label.categoryIdentifier" />
               <field id="rmDeclared" label-id="label.declared" />
               <field id="rmRecordType" label-id="label.recordType" />
               <field id="rmDispositionInstructions" label-id="label.dispositionInstructions" />
               <field id="rma:recordSearchDispositionActionAsOf" label-id="label.dispositionAsOfDate" />
               <field id="cm:title" mandatory="true">
                  <control template="/org/alfresco/components/form/controls/textfield.ftl" />
               </field>
               <field id="cm:description">
                  <control>
                     <control-param name="activateLinks">true</control-param>
                  </control>
               </field>
               <field id="mimetype">
                  <control template="/org/alfresco/components/form/controls/mimetype.ftl" />
               </field>
               <field id="size">
                  <control template="/org/alfresco/components/form/controls/size.ftl" />
               </field>

               <field id="rma:physicalSize" label-id="label.physicalSize" >
                  <control template="/org/alfresco/components/form/controls/size.ftl" />
               </field>
               <field id="rma:numberOfCopies" label-id="label.numberOfCopies" >
                  <control template="/org/alfresco/components/form/controls/number.ftl" />
               </field>
               <field id="rma:storageLocation" label-id="label.storageLocation" />
               <field id="rma:shelf" label-id="label.shelf" />
               <field id="rma:box" label-id="label.box" />
               <field id="rma:file" label-id="label.file" />
            </appearance>
         </form>
      </forms>
   </config>

   <config evaluator="node-type" condition="cm:folder">
      <forms>
         <form id="rm">
            <field-visibility>
               <show id="cm:name" />
               <show id="cm:title" force="true" />
               <show id="cm:description" force="true" />
            </field-visibility>
            <appearance>
               <field id="cm:title">
                  <control template="/org/alfresco/components/form/controls/textfield.ftl" />
               </field>
               <field id="cm:description">
                  <control>
                     <control-param name="activateLinks">true</control-param>
                  </control>
               </field>
            </appearance>
          </form>
      </forms>
   </config>
   
</alfresco-config>
